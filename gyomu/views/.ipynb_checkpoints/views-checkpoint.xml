<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="gyomu.list">
      <field name="name">gyomu list</field>
      <field name="model">gyomu.gyomu</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="gyomu.action_window">
      <field name="name">gyomu window</field>
      <field name="res_model">gyomu.gyomu</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="gyomu.action_server">
      <field name="name">gyomu server</field>
      <field name="model_id" ref="model_gyomu_gyomu"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="gyomu" id="gyomu.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="gyomu.menu_1" parent="gyomu.menu_root"/>
    <menuitem name="Menu 2" id="gyomu.menu_2" parent="gyomu.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="gyomu.menu_1_list" parent="gyomu.menu_1"
              action="gyomu.action_window"/>
    <menuitem name="Server to list" id="gyomu" parent="gyomu.menu_2"
              action="gyomu.action_server"/>

  </data>
</odoo>